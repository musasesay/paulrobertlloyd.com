source "https://rubygems.org"

# Capistrano (for automated deployment)
group :development do
  gem 'capistrano'
  gem 'capistrano-rvm'
  gem 'capistrano-bundler'
  gem 'capistrano-npm'
end

# Rake (for task management)
gem 'rake'

# Jekyll
gem 'jekyll'
gem 'jekyll-archives',
    :git => 'git://github.com/jekyll/jekyll-archives.git',
    :branch => 'archives'
gem 'jekyll-sitemap'
gem 'typogruby',
    :git => 'git://github.com/avdgaag/typogruby.git'
gem 'therubyracer',
    :platforms => :ruby