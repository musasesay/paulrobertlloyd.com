source "https://rubygems.org"

# Capistrano (for automated deployment)
group :development do
  gem 'capistrano'
  gem 'capistrano-rvm'
  gem 'capistrano-bundler'
  gem 'capistrano-npm'
end

# Guard (for development)
group :development do
  gem 'guard'
  gem 'guard-jekyll-plus', :git => 'https://github.com/berrberr/guard-jekyll-plus.git'
  gem 'guard-jslint-on-rails'
  gem 'guard-livereload'
  gem 'guard-sass'
  gem 'guard-shell'
end

# Rake (for task management)
gem 'rake'

# Jekyll
gem 'jekyll'
gem 'jekyll-archives'
gem 'jekyll-assets'
gem 'jekyll-sitemap'
gem 'typogruby'
gem 'nokogiri'
gem 'uglifier'
gem 'scss-lint'
