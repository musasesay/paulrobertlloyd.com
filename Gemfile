source "https://rubygems.org"

# Capistrano (for automated deployment)
group :development do
  gem 'capistrano'
  gem 'capistrano-rvm'
  gem 'capistrano-bundler'
  gem 'capistrano-npm'
end

# Rake (for task management)
gem 'rake'

# Jekyll
gem 'jekyll'
gem 'jekyll-archives',
    :git => 'git://github.com/jekyll/jekyll-archives.git',
    :branch => 'master'
gem 'jekyll-sitemap'
gem 'jekyll-retinamagick'
gem 'typogruby'
gem 'japr'
gem 'myth'
gem 'myth-source', '1.1.1'
gem 'yui-compressor'
