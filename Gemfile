source "https://rubygems.org"

# Capistrano (for automated deployment)
group :development do
  gem 'capistrano'
  gem 'capistrano-rvm'
  gem 'capistrano-bundler'
  gem 'capistrano-npm'
end

# Guard (for development)
group :development do
  gem 'guard'
  gem 'guard-jekyll'
  gem 'guard-livereload'
end

# Rake (for task management)
gem 'rake'

# Jekyll
gem 'jekyll'
gem 'jekyll-archives'
gem 'jekyll-sitemap'
gem 'yui-compressor'
gem 'nokogiri'
gem 'typogruby'
