source "https://rubygems.org"

# Capistrano (for automated deployment)
group :development do
  gem 'capistrano'
  gem 'capistrano-rvm'
  gem 'capistrano-bundler'
  gem 'capistrano-npm'
end

# Rake (for task management)
gem 'rake'

# Jekyll
gem 'jekyll'
gem 'jekyll-archives'
gem 'jekyll-sitemap'
gem 'myth'
gem 'myth-source', '1.1.1'
gem 'yui-compressor'
gem 'typogruby'
gem 'japr'
