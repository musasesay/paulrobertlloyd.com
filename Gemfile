source "https://rubygems.org"

# Capistrano (for automated deployment
group :development do
  gem 'capistrano'
  gem 'capistrano-bundler'
  gem 'capistrano-rvm'
end

# Rake (for task management)
gem 'rake'

# Jekyll
gem 'jekyll'
gem 'jekyll-sitemap'
gem 'typogruby',
    :git => 'git://github.com/avdgaag/typogruby.git'
gem 'ruby-oembed'
gem 'xml-simple'
gem 'therubyracer', :platforms => :ruby