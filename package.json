{
  "name": "paulrobertlloyd.com",
  "version": "3.0.0",
  "description": "The personal website of Paul Robert Lloyd",
  "keywords": [
    "indieweb",
    "personal-website",
    "jekyll-website"
  ],
  "homepage": "https://paulrobertlloyd.com",
  "bugs": "https://github.com/paulrobertlloyd/paulrobertlloyd.com/issues",
  "license": "SEE LICENSE IN LICENSE",
  "author": "Paul Robert Lloyd",
  "repository": {
    "type": "git",
    "url": "https://github.com/paulrobertlloyd/paulrobertlloyd.com.git"
  },
  "scripts": {
    "javascripts": "rollup -c etc/rollup/config.js",
    "stylesheets:compile": "node-sass src/assets/stylesheets/main.scss --output-style=compressed --output=www/assets/stylesheets/",
    "stylesheets:prefix": "postcss www/assets/stylesheets/main.css --use autoprefixer --output=www/assets/stylesheets/main.css",
    "build": "npm run javascripts & npm run stylesheets:compile & npm run stylesheets:prefix",
    "test": "xo || stylelint **/*.scss"
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ]
    ],
    "plugins": [
      "external-helpers"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "files": "**/*.scss",
    "rules": {
      "declaration-empty-line-before": "never",
      "string-quotes": "double"
    },
    "ignoreFiles": [
      "src/**/vendor/**"
    ]
  },
  "xo": {
    "envs": "browser",
    "esnext": false,
    "space": true,
    "ignores": [
      "src/**/vendor/**",
      "www/**"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^7.2.0",
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-latest": "^6.24.1",
    "fontfaceobserver": "^2.0.13",
    "node-sass": "^4.7.0",
    "postcss-cli": "^4.1.0",
    "rollup": "^0.53.0",
    "rollup-plugin-babel": "^3.0.0",
    "rollup-plugin-commonjs": "^8.2.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "xo": "^0.18.2"
  }
}
