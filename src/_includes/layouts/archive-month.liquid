---
layout: default
---
<h1 class="c-main__title">{{ page.title | smartify }}</h1>

<div class="c-section">
{% assign page_month = page.date | date: "%B %Y" %}
{% assign items = collections.documents | where: "archive", true | sort: "date" | reverse %}
{% for item in items %}
  {% assign item_month = item.date | date: "%B %Y" %}
  {% if page_month == item_month %}
    {% case item.layout %}
    {% when "link" %}
      {% include item-link showtype=true %}
    {% when "note" %}
      {% include item-note showtype=true %}
    {% else %}
      {% include item-post showtype=true %}
    {% endcase %}
  {% endif %}
{% endfor %}
</div>
