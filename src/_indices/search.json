---
permalink: /archive/search.json
---
{%- assign items = site.documents | where: "feed", true | sort: "date" | reverse -%}
[{% for item in items %}
  {
    "title": {{ item.title | smartify | jsonify }},
    "excerpt": {{ item.excerpt | smartify | jsonify }},
    "type": {{ item.layout | jsonify }},
    "tags": "{{ item.tags | array_to_sentence_string }}",
    "url": {{ item.url | remove:".html" | jsonify }}
  }{% if forloop.last %}{% else %},{% endif %}
{%- endfor %}]
