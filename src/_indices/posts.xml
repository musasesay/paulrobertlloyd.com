---
permalink: /feed.xml
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <id>{{ site.url }}/</id>
  <title>{{ site.title }}</title>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <author>
    <name>{{ site.author.name }}</name>
    <email>{{ site.author.email }}</email>
    <uri>{{ site.author.url }}</uri>
  </author>
  <link href="{{ site.url }}/feed.xml" rel="self"/>
  <link href="{{ site.url }}"/>
  <generator uri="http://jekyllrb.com" version="{{ jekyll.version }}">Jekyll</generator>
  <icon>{{ site.url }}images/icon.png</icon>
  <rights>Â© {{ site.time | date:"%Y" }} {{ site.author.name }}. Content Creative Commons licensed unless otherwise stated.</rights>
  {% assign posts = site.posts | sort: "date" | reverse %}
  {% for item in posts limit:25 %}
  <entry>
    {% case item.layout %}
    {% when "gallery" %}
      {% assign title_prefix = "Gallery: " %}
    {% when "link" %}
      {% assign title_prefix = "Link: " %}
    {% endcase %}
    <id>{{ site.url }}{{ item.id }}</id>
    {% if item.title != "" %}<title>{{ title_prefix }}{{ item.title | markdownify | strip_html | xml_escape }}</title>{% endif %}
    <updated>{{ item.date | date_to_xmlschema }}</updated>
    <link href="{{ site.url }}{{ item.url }}"/>
    <content type="html">
<![CDATA[
{% if item.image.src %}
  {% include figure.html
    src=item.image.src
    caption=item.image.caption
  %}
{% endif %}

{% if item.embed.src %}
  {% include figure-embed.html
    src=item.embed.src
  %}
{% endif %}

{{ item.content | markdownify | strip_newlines }}

{% if item.collection == "links" %}
  <p><a href="{{ item.link }}">Visit this link &#10217;</a></p>
{% endif %}
]]>
    </content>
  </entry>
  {% endfor %}
</feed>
