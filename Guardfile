# guard 'jekyll-plus', :config => ['config/jekyll.yml', 'config/jekyll/development.yml'], :serve => true, :extensions => ['txt', 'markdown', 'html', 'xml', 'yml']

guard 'sass', :input => 'source/_assets/stylesheets', :output => 'public/assets/stylesheets'

guard 'livereload' do
  watch(%r{public/.+})
end
