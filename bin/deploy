#!/bin/sh
set -e

bin/build

echo "Publishing websiteâ€¦"
for SOURCE in www etc
do
  rsync \
    -e "ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=~/.ssh/known_hosts" \
    -hvrt \
    --omit-dir-times \
    --keep-dirlinks \
    --exclude '.DS*' \
    --exclude 'etc/jekyll' \
    --exclude 'etc/ssl' \
    $SOURCE $PAULROBERTLLOYD_DEPLOY_DEST
done

echo "Website published!"
